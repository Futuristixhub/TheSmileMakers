<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="vm"
            type="com.smilemakers.dashBoard.profile.ProfileVM" />
    </data>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background_drawable_grey_ligh"
        android:padding="@dimen/space_20"
        android:orientation="vertical"
        tools:context="com.smilemakers.dashBoard.profile.ProfileFragment">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <View
                    android:id="@+id/view_user_profile_pic"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:background="@drawable/circle_fill_color_primary"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"/>

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="135dp"
                    android:layout_height="135dp"
                    android:src="@drawable/ic_patient"
                    android:layout_centerInParent="true"
                    android:scaleType="centerCrop"
                    app:layout_constraintTop_toTopOf="@id/view_user_profile_pic"
                    app:layout_constraintStart_toStartOf="@id/view_user_profile_pic"
                    app:layout_constraintEnd_toEndOf="@id/view_user_profile_pic"
                    app:layout_constraintBottom_toBottomOf="@id/view_user_profile_pic"/>
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="bottom">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Name : "
                    android:textSize="20sp"
                    android:layout_marginStart="@dimen/space_16"
                    app:layout_constraintBottom_toTopOf="@id/tv_user_name" />

                <TextView
                    android:id="@+id/tv_user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:text="Preyansh Brahmbhatt Brahmbhatt"
                    android:layout_marginBottom="@dimen/space_8"
                    android:layout_marginStart="@dimen/space_16"
                    app:layout_constraintEnd_toEndOf="parent" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_lbl_mobile_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mobile Number : "
                android:textSize="20sp"
                android:layout_marginTop="@dimen/space_20"
                android:layout_marginStart="@dimen/space_8"
                app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                android:id="@+id/tv_mobile_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+91 886 651 1911"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginTop="@dimen/space_20"
                android:layout_marginStart="@dimen/space_8"
                app:layout_constraintStart_toEndOf="@id/tv_lbl_mobile_number"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_lbl_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="E-mail : "
                android:textSize="20sp"
                android:layout_marginTop="@dimen/space_8"
                android:layout_marginStart="@dimen/space_8"
                app:layout_constraintTop_toBottomOf="@id/tv_lbl_mobile_number"
                app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                android:id="@+id/tv_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="preyansh.brahmbhatt.brahmbhatt@gmail.com"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginTop="@dimen/space_8"
                app:layout_constraintTop_toBottomOf="@id/tv_mobile_number"
                app:layout_constraintStart_toEndOf="@id/tv_lbl_email"
                app:layout_constraintEnd_toEndOf="parent"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_lbl_branch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Your Branch : "
                android:textSize="20sp"
                android:layout_marginTop="@dimen/space_8"
                android:layout_marginStart="@dimen/space_8"
                app:layout_constraintTop_toBottomOf="@id/tv_email"
                app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                android:id="@+id/tv_branch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Bapunagar"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginTop="@dimen/space_8"
                app:layout_constraintTop_toBottomOf="@id/tv_email"
                app:layout_constraintStart_toEndOf="@id/tv_lbl_branch"
                app:layout_constraintEnd_toEndOf="parent"/>
        </LinearLayout>

        <Button
            android:id="@+id/btn_edit_profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Edit Profile"
            android:textSize="@dimen/text_20"
            android:textAllCaps="false"
            android:background="@drawable/login_button_drawable"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_marginTop="@dimen/space_20"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_branch"
            app:layout_constraintVertical_bias="1.0" />

        <Button
            android:id="@+id/btn_changed_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Changed Password"
            android:textSize="@dimen/text_20"
            android:textAllCaps="false"
            android:background="@drawable/login_button_drawable"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_marginTop="@dimen/space_8"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btn_edit_profile"
            app:layout_constraintVertical_bias="1.0" />

    </LinearLayout>
<!--    <TextView-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="match_parent"-->
<!--        android:text="SAmple textview"/>-->
</layout>
