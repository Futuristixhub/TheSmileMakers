<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/day_holder"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/medium_margin"
    android:background="@drawable/background_drawable_grey_ligh">

    <include layout="@layout/top_navigation" />

    <LinearLayout
        android:id="@+id/top_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/top_value"
        android:background="@color/colorPrimary"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/event_item_color_bar"
            android:layout_width="@dimen/event_color_bar_width"
            android:layout_height="match_parent"
            android:layout_marginEnd="@dimen/small_margin"
            android:background="@drawable/event_list_color_bar"
            android:paddingTop="@dimen/tiny_margin"
            android:paddingBottom="@dimen/tiny_margin"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/event_item_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="13:00 PM"
            android:textSize="@dimen/text_18"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/bapunagar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:paddingTop="@dimen/normal_margin"
            android:paddingEnd="@dimen/activity_margin"
            android:paddingBottom="@dimen/normal_margin"
            android:text="@string/bapunagar"
            android:textColor="@color/white"
            android:textSize="@dimen/text_18" />

        <ImageView
            android:layout_width="@dimen/event_color_width"
            android:layout_height="match_parent"
            android:background="@color/white" />

        <TextView
            android:id="@+id/nikol"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:paddingEnd="@dimen/activity_margin"
            android:text="@string/nikol"
            android:textColor="@color/white"
            android:textSize="@dimen/text_18" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/btm_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/top_header"
        android:orientation="horizontal"
        android:weightSum="4">

        <ImageView
            android:layout_width="@dimen/event_color_bar_width"
            android:layout_height="match_parent"
            android:layout_marginEnd="@dimen/small_margin"
            android:background="@drawable/event_list_color_bar"
            android:paddingTop="@dimen/tiny_margin"
            android:paddingBottom="@dimen/tiny_margin"
            android:visibility="invisible" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_18"
            android:visibility="invisible"
            android:text="13:00 PM" />

        <TextView
            android:id="@+id/seat1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:paddingTop="@dimen/normal_margin"
            android:paddingBottom="@dimen/normal_margin"
            android:text="@string/seat1"
            android:maxLines="1"
            android:textColor="@color/md_grey_black"
            android:textSize="@dimen/text_18" />

        <ImageView
            android:layout_width="@dimen/event_color_width"
            android:layout_height="match_parent"
            android:background="@color/md_grey_black" />

        <TextView
            android:id="@+id/seat2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="@string/seat2"
            android:maxLines="1"
            android:textColor="@color/md_grey_black"
            android:textSize="@dimen/text_18" />

        <ImageView
            android:layout_width="@dimen/event_color_width"
            android:layout_height="match_parent"
            android:background="@color/md_grey_black" />

        <TextView
            android:id="@+id/seat1n"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="@string/seat1"
            android:maxLines="1"
            android:textColor="@color/md_grey_black"
            android:textSize="@dimen/text_18" />

        <ImageView
            android:layout_width="@dimen/event_color_width"
            android:layout_height="match_parent"
            android:background="@color/md_grey_black" />

        <TextView
            android:id="@+id/seat2n"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="@string/seat2"
            android:maxLines="1"
            android:textColor="@color/md_grey_black"
            android:textSize="@dimen/text_18" />

    </LinearLayout>

    <com.simplemobiletools.commons.views.MyRecyclerView
        android:id="@+id/day_events"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/btm_header"
        android:clipToPadding="false"
        app:layoutManager="com.simplemobiletools.commons.views.MyLinearLayoutManager" />

    <TextView
        android:id="@+id/tv_empty"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:layout_below="@+id/top_value"
        android:gravity="center"
        android:visibility="gone"
        android:textSize="@dimen/text_18"
        android:text="@string/no_upcoming_events" />

</RelativeLayout>
