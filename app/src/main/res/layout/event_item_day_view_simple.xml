<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/event_item_frame"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true"
    android:foreground="@drawable/selector">

    <LinearLayout
        android:id="@+id/btm_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="4">

        <TextView
            android:id="@+id/event_item_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/normal_margin"
            android:paddingBottom="@dimen/normal_margin"
            android:textSize="@dimen/text_14"
            android:layout_marginStart="@dimen/space_8"
            tools:text="13:00 PM" />

        <com.github.vipulasri.timelineview.TimelineView
            android:id="@+id/timeline"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/space_8"
            android:layout_marginEnd="@dimen/space_18"
            app:endLineColor="@color/colorAccent"
            app:lineWidth="2dp"
            app:markerSize="@dimen/space_12"
            app:startLineColor="@color/colorAccent" />

        <TextView
            android:id="@+id/event_item_title1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:maxLines="1"
            android:textSize="@dimen/text_14"
            android:textColor="@color/white"
          />

          <ImageView
              android:layout_width="@dimen/event_color_width"
              android:layout_height="match_parent"
              android:background="@color/md_grey_300" />

          <TextView
              android:textColor="@color/white"
              android:id="@+id/event_item_title2"
              android:layout_width="0dp"
              android:layout_height="match_parent"
              android:layout_weight="1"
              android:gravity="center"
              android:maxLines="1"
              android:textSize="@dimen/text_14"
            />

          <ImageView
              android:layout_width="@dimen/event_color_width"
              android:layout_height="match_parent"
              android:background="@color/md_grey_300" />

          <TextView
              android:textColor="@color/white"
              android:id="@+id/event_item_title3"
              android:layout_width="0dp"
              android:layout_height="match_parent"
              android:layout_weight="1"
              android:maxLines="1"
              android:gravity="center"
              android:textSize="@dimen/text_14"
              />

          <ImageView
              android:layout_width="@dimen/event_color_width"
              android:layout_height="match_parent"
              android:background="@color/md_grey_300" />

          <TextView
              android:textColor="@color/white"
              android:id="@+id/event_item_title4"
              android:layout_width="0dp"
              android:layout_height="match_parent"
              android:layout_weight="1"
              android:maxLines="1"
              android:gravity="center"
              android:textSize="@dimen/text_14"
            />

    </LinearLayout>
</FrameLayout>
